@model Sada.ViewModels.Tailor.AvailabilityListViewModel

<div class="tab-pane fade show active" id="availability" role="tabpanel">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>Working Hours & Availability</h4>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addAvailabilityModal">
            <i class="fas fa-plus me-1"></i> Add Time Slot
        </button>
    </div>
    <div class="row">
        @foreach (var day in Model.DaysOfWeek)
        {
            var daySlots = Model.AvailabilitiesByDay.ContainsKey(day)
            ? Model.AvailabilitiesByDay[day]
            : new List<Sada.ViewModels.Tailor.AvailabilityViewModel>();

            <div class="col-md-6 mb-3">
                <div class="availability-day">
                    <h6>@day</h6>
                    @if (daySlots.Any())
                    {
                        <div class="mb-2">
                            @foreach (var slot in daySlots)
                            {
                                <span class="time-slot">
                                    @slot.StartTime.ToString("h:mm tt") - @slot.EndTime.ToString("h:mm tt")
                                </span>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted small mb-0">No availability set</p>
                    }
                    <button class="btn btn-outline-primary btn-sm" data-day="@day">
                        <i class="fas fa-edit me-1"></i> Edit
                    </button>
                </div>
            </div>
        }
    </div>
</div>