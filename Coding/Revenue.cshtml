@* ========================================== *@
@* Views/Admin/Report/Revenue.cshtml *@
@* ========================================== *@
@model Sada.ViewModels.Admin.RevenueReportViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Revenue Report";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Revenue Report</h2>
            <p class="text-muted mb-0">Platform financial performance and analytics</p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-outline-primary me-2">
                <i class="fas fa-arrow-left me-2"></i>Back to Reports
            </a>
        </div>
    </div>

    <!-- Revenue Statistics -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stats-card">
                <div class="stats-number">@Model.Stats.TotalRevenue.ToString("N2") SR</div>
                <div class="stats-label">Total Revenue</div>
                <i class="fas fa-money-bill-wave fa-2x mt-3 text-primary"></i>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stats-card">
                <div class="stats-number">@Model.Stats.PlatformCommission.ToString("N2") SR</div>
                <div class="stats-label">Platform Commission</div>
                <i class="fas fa-hand-holding-usd fa-2x mt-3 text-success"></i>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stats-card">
                <div class="stats-number">@Model.Stats.TailorPayout.ToString("N2") SR</div>
                <div class="stats-label">Tailor Payout</div>
                <i class="fas fa-user-tie fa-2x mt-3 text-info"></i>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="stats-card">
                <div class="stats-number">@Model.Stats.CompletedOrders</div>
                <div class="stats-label">Completed Orders</div>
                <i class="fas fa-check-circle fa-2x mt-3 text-warning"></i>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Order Statistics -->
        <div class="col-lg-6 mb-4">
            <div class="data-card">
                <h5 class="mb-3">Order Statistics</h5>
                <div class="row text-center">
                    <div class="col-4">
                        <div class="border-end">
                            <div class="stats-number text-primary">@Model.Stats.TotalOrders</div>
                            <div class="stats-label">Total Orders</div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="border-end">
                            <div class="stats-number text-success">@Model.Stats.CompletedOrders</div>
                            <div class="stats-label">Completed</div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="stats-number text-warning">@Model.Stats.PendingOrders</div>
                        <div class="stats-label">Pending</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Monthly Revenue -->
        <div class="col-lg-6 mb-4">
            <div class="data-card">
                <h5 class="mb-3">Recent Monthly Revenue</h5>
                @if (Model.MonthlyRevenue.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Period</th>
                                    <th class="text-end">Revenue</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var revenue in Model.MonthlyRevenue)
                                {
                                    <tr>
                                        <td>@revenue.MonthName</td>
                                        <td class="text-end">@revenue.Revenue.ToString("N2") SR</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center">No revenue data available</p>
                }
            </div>
        </div>
    </div>

    <!-- Top Performing Tailors -->
    <div class="row">
        <div class="col-12">
            <div class="data-card">
                <h5 class="mb-3">Top Performing Tailors</h5>
                @if (Model.TopTailors.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Tailor</th>
                                    <th>Completed Orders</th>
                                    <th class="text-end">Total Revenue</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var tailor in Model.TopTailors)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="rounded-circle bg-light-teal d-flex align-items-center justify-content-center me-2"
                                                     style="width: 35px; height: 35px;">
                                                    <i class="fas fa-user-tie text-dark-blue"></i>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">@tailor.TailorName</h6>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">@tailor.CompletedOrdersCount</span>
                                        </td>
                                        <td class="text-end">
                                            <strong>@tailor.TotalRevenue.ToString("N2") SR</strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-success">Active</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center">No tailor performance data available</p>
                }
            </div>
        </div>
    </div>
</div>
