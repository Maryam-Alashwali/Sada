@* Views/Shared/_TailorLayout.cshtml (app_user.blade.php) *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Tailor Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/dash.css">
    @await RenderSectionAsync("Styles", required: false)
    <style>
        .btn-dark-blue {
            background-color: var(--dark-blue);
            color: white;
            border: none;
        }

            .btn-dark-blue:hover {
                background-color: var(--lavender);
            }

        .offcanvas {
            background-color: var(--light-blue);
            border-left: 4px solid var(--lavender);
        }

        .list-group-item {
            padding: 1rem 1.25rem;
            font-weight: 500;
            color: var(--dark-blue);
            transition: all 0.3s ease;
        }

            .list-group-item:hover {
                background-color: var(--light-teal);
                color: white;
            }

            .list-group-item.active {
                background-color: var(--lavender);
                color: white;
                font-weight: 600;
            }

        .notification-badge {
            position: absolute;
            top: -4px;
            right: -4px;
            background: var(--lavender);
            color: white;
            font-size: 0.7rem;
            padding: 2px 6px;
            border-radius: 50%;
        }
    </style>
</head>
<body>

    <header class="dashboard-header sticky-top">
        <div class="container d-flex justify-content-between align-items-center py-0">
            <a class="navbar-brand d-flex align-items-center" asp-area="Tailor" asp-controller="Dashboard" asp-action="Index">
                <img height="70" src="~/logo.png" class="me-2" alt="Sada Logo">
            </a>
            <div class="text-center d-none d-md-block">
                <h5 class="mb-0 fw-semibold">Welcome back, @ViewBag.TailorFirstName</h5>
                <small class="text-muted">Tailor Dashboard</small>
            </div>
            <!-- Right Section -->
            <div class="d-flex align-items-center gap-3">
                <!-- Notification -->
                <div class="dropdown">
                    <button class="btn btn-outline-primary position-relative dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="fas fa-bell"></i>
                        @{
                            var unreadNotifications = ViewBag.UnreadNotificationsCount ?? 0;
                        }
                        @if (unreadNotifications > 0)
                        {
                            <span class="notification-badge">@unreadNotifications</span>
                        }
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" style="min-width: 300px;">
                        <li class="dropdown-header d-flex justify-content-between align-items-center">
                            <span>Notifications</span>
                            @if (unreadNotifications > 0)
                            {
                                <a href="#" class="btn btn-sm btn-outline-primary">View All</a>
                            }
                        </li>
                        <li><a class="dropdown-item text-muted" href="#">No notifications</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item text-center" href="#">See all notifications</a></li>
                    </ul>
                </div>
                <!-- Profile Dropdown -->
                <div class="dropdown">
                    <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        @if (!string.IsNullOrEmpty(ViewBag.TailorProfilePicture))
                        {
                            <img src="~/@ViewBag.TailorProfilePicture" class="profile-avatar me-2" style="width: 30px; height: 30px; border-radius: 50%;" alt="Profile">
                        }
                        else
                        {
                            <img src="https://s3u.tmimgcdn.com/u37752224/820abb9ca485ecbff088ee0ffa6b1b38.gif" class="profile-avatar me-2" style="width: 30px; height: 30px; border-radius: 50%;" alt="Default Profile">
                        }
                        @ViewBag.TailorFirstName
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" asp-area="Tailor" asp-controller="Profile" asp-action="Show"><i class="fas fa-user me-2"></i> Profile</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form method="POST" asp-controller="Auth" asp-action="Logout" id="logoutForm">
                                @Html.AntiForgeryToken()
                                <a class="dropdown-item" href="#" onclick="event.preventDefault(); document.getElementById('logoutForm').submit();">
                                    <i class="fas fa-sign-out-alt me-2"></i> Logout
                                </a>
                            </form>
                        </li>
                    </ul>
                </div>

                <!-- Menu Button -->
                <button class="btn btn-dark-blue" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
        </div>
    </header>

    @RenderBody()

    <!-- Right Sidebar Menu -->
    @await Html.PartialAsync("_TailorNavMenu")

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>