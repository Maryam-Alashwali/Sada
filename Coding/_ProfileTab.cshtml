@model Sada.ViewModels.Tailor.TailorProfileViewModel

<div class="tab-pane fade show active" id="profile" role="tabpanel">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>Profile Information</h4>
        <a asp-area="Tailor" asp-controller="Profile" asp-action="Edit" class="btn btn-primary">
            <i class="fas fa-edit me-1"></i> Edit Profile
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            @TempData["Success"]
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>First Name:</strong></div>
                        <div class="col-sm-9">@Model.TailorFirstName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Last Name:</strong></div>
                        <div class="col-sm-9">@Model.TailorLastName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Email:</strong></div>
                        <div class="col-sm-9">@Model.Email</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Phone:</strong></div>
                        <div class="col-sm-9">@Model.TailorPhone</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Address:</strong></div>
                        <div class="col-sm-9">@Model.TailorAddress</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3"><strong>Account Status:</strong></div>
                        <div class="col-sm-9">
                            <span class="badge @(Model.IsApproved == true ? "bg-success" : "bg-warning")">
                                @(Model.IsApproved == true ? "Approved" : "Pending Approval")
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ExistingProfilePicture))
                    {
                        <img src="@Url.Content(Model.ExistingProfilePicture)"
                             class="rounded-circle mb-3"
                             width="150"
                             height="150"
                             alt="Profile"
                             style="object-fit: cover;">
                    }
                    else
                    {
                        <div class="profile-placeholder rounded-circle mb-3 mx-auto"
                             style="width: 150px; height: 150px; background: #f0f0f0; display: flex; align-items: center; justify-content: center;">
                            <i class="fas fa-user fa-4x text-muted"></i>
                        </div>
                    }
                    <h5>@Model.TailorFirstName @Model.TailorLastName</h5>
                    <p class="text-muted">Tailor</p>
                </div>
            </div>
        </div>
    </div>
</div>