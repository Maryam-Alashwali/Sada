@* Views/Admin/Profile/Edit.cshtml *@
@model Sada.ViewModels.Admin.ProfileViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit Profile";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Edit Profile</h2>
            <p class="text-muted mb-0">Update your account information and password</p>
        </div>
        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Profile Information -->
            <div class="data-card mb-4">
                <h5 class="mb-3">
                    <i class="fas fa-user me-2"></i>Profile Information
                </h5>
                <form asp-action="Update" method="post">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="AdminName" class="form-label">Full Name *</label>
                                <input asp-for="AdminName" class="form-control" required>
                                <span asp-validation-for="AdminName" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email Address *</label>
                                <input asp-for="Email" class="form-control" required>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Role</label>
                                <input type="text" class="form-control" value="@Model.AdminRole" disabled>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Account Created</label>
                                <input type="text" class="form-control" value="@DateTime.Now.ToString("MMM d, yyyy")" disabled>
                            </div>
                        </div>
                    </div>

                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Update Profile
                        </button>
                    </div>
                </form>
            </div>

            <!-- Change Password -->
            <div class="data-card">
                <h5 class="mb-3">
                    <i class="fas fa-lock me-2"></i>Change Password
                </h5>
                <form asp-action="Update" method="post">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CurrentPassword" class="form-label">Current Password</label>
                                <input asp-for="CurrentPassword" class="form-control">
                                <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="NewPassword" class="form-label">New Password</label>
                                <input asp-for="NewPassword" class="form-control">
                                <span asp-validation-for="NewPassword" class="text-danger small"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
                                <input asp-for="ConfirmPassword" class="form-control">
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        Leave password fields empty if you don't want to change your password.
                    </div>

                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-key me-2"></i>Update Password
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Account Summary -->
            <div class="data-card">
                <h5 class="mb-3">
                    <i class="fas fa-user-shield me-2"></i>Account Summary
                </h5>
                <div class="text-center mb-4">
                    <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center mx-auto"
                         style="width: 80px; height: 80px;">
                        <i class="fas fa-user-shield fa-2x text-white"></i>
                    </div>
                    <h5 class="mt-3 mb-1">@Model.AdminName</h5>
                    <p class="text-muted">@Model.Email</p>
                </div>

                <div class="list-group list-group-flush">
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span>Role</span>
                        <span class="badge bg-primary">@Model.AdminRole</span>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <span>Status</span>
                        <span class="badge bg-success">Active</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}