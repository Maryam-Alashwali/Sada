@model Sada.ViewModels.Admin.ReviewListViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Review Moderation";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1">Review Moderation</h2>
            <p class="text-muted mb-0">Manage and moderate customer reviews</p>
        </div>
    </div>

    <!-- Reviews Table -->
    <div class="data-card">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Review</th>
                        <th>Client</th>
                        <th>Service</th>
                        <th>Rating</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Reviews.Any())
                    {
                        @foreach (var review in Model.Reviews)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-start">
                                        <div class="flex-grow-1">
                                            @if (!string.IsNullOrEmpty(review.Comment))
                                            {
                                                <p class="mb-1">@(review.Comment.Length > 100 ? review.Comment.Substring(0, 100) + "..." : review.Comment)</p>
                                            }
                                            else
                                            {
                                                <p class="mb-1 text-muted"><em>No comment</em></p>
                                            }
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle bg-light-teal d-flex align-items-center justify-content-center me-2"
                                             style="width: 35px; height: 35px;">
                                            <i class="fas fa-user text-dark-blue"></i>
                                        </div>
                                        <div>
                                            <h6 class="mb-0">@review.ClientName</h6>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge">@review.ServiceName</span>
                                </td>
                                <td>
                                    <div class="rating-stars">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            @if (i <= (review.Rating ?? 0))
                                            {
                                                <i class="fas fa-star text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star text-warning"></i>
                                            }
                                        }
                                        <br>
                                        <small class="text-muted">@review.Rating/5</small>
                                    </div>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        @review.ReviewCreatedAt?.ToString("MMM d, yyyy")<br>
                                        @review.ReviewCreatedAt?.ToString("h:mm tt")
                                    </small>
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-danger delete-review"
                                            data-review-id="@review.ReviewId"
                                            data-review-comment="@(review.Comment?.Length > 50 ? review.Comment.Substring(0, 50) + "..." : review.Comment)">
                                        <i class="fas fa-trash me-1"></i>Delete
                                    </button>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center py-4">
                                <i class="fas fa-star fa-3x text-muted mb-3"></i>
                                <h5>No reviews found</h5>
                                <p class="text-muted">There are no reviews to moderate at this time.</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="d-flex justify-content-between align-items-center mt-4">
                <div class="text-muted">
                    Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) to @(Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalCount)) of @Model.TotalCount reviews
                </div>
                <nav>
                    <ul class="pagination">
                        @if (Model.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
                            </li>
                        }
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                            </li>
                        }
                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)">Next</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

<!-- Delete Review Modal -->
<div class="modal fade" id="deleteReviewModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Review</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this review?</p>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    This action cannot be undone. The review will be permanently removed.
                </div>
                <p><strong>Review:</strong> <span id="reviewPreview" class="text-muted"></span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteReview">
                    <i class="fas fa-trash me-2"></i>Delete Review
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            let selectedReviewId = null;

            // Delete review modal
            document.querySelectorAll('.delete-review').forEach(button => {
                button.addEventListener('click', function() {
                    selectedReviewId = this.dataset.reviewId;
                    document.getElementById('reviewPreview').textContent = this.dataset.reviewComment || 'No comment';
                    new bootstrap.Modal(document.getElementById('deleteReviewModal')).show();
                });
            });

            // Confirm delete
            document.getElementById('confirmDeleteReview').addEventListener('click', function() {
                const button = this;
                button.disabled = true;
                button.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Deleting...';

                fetch(`/Admin/Review/Delete/${selectedReviewId}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value,
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error deleting review');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error deleting review');
                })
                .finally(() => {
                    button.disabled = false;
                    button.innerHTML = '<i class="fas fa-trash me-2"></i>Delete Review';
                });
            });
        });
    </script>
}